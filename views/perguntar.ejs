        <%- include('partials/navbar.ejs'); -%> <!--Barra de navegação-->
        <div class="container"> <!--Container-->

            <div class="card" id="formulario-pergunta"> <!--Card-->
                <div class="card-header">
                    <h1>Realizar Perguntas</h1>
                </div>
