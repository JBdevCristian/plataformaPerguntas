
<%- include('partials/header.ejs'); -%> <!--Cabeçalho-->
<body>
    <%- include('partials/navbar.ejs'); -%> <!--Barra de navegação-->
        <div class="container mt-4">

            <h3>Realize uma pergunta!</h3>
            <a href="/perguntar" class="btn btn-primary mt-3 btn-sm">Perguntar</a>
            <hr>
            
            <% perguntas.forEach(pergunta => { %> 

                <div class="card">
                    <div class="card-body">
                        <h3><%= pergunta.titulo %></h3>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-primary btn-sm" href="/pergunta/<%= pergunta.id %>">Responder</a>
                    </div>
                </div> <br>
                
                

            <% }); %>

        </div>
</body>
<%- include('partials/footer.ejs'); -%> <!--rodapé-->